    <body>
        <div class="page">
            
            <div class="bannerContainer">
                <div class="mainNav row">
                    <div class="col-sm-1 hidden-xs">
                        <div id="productLogo">Logo</div>
                    </div>
                    <div class="col-sm-11 col-xs-12">
                        <div class="clearfix">
                            <div class="pull-left">
