                                        <button id="icSearch" class="btn btn-default" type="button">
                                            <span class="glyphicon glyphicon-search"></span>
                                        </button>
                                    </span>
                                </div>
                            </div>
                            <div id="languageSelector" class="pull-left hidden-xs">
